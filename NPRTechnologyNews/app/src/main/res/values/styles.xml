<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArticleDescription">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ArticleTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/article_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleAuthor">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ArticleDate">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="NprDescription">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

</resources>
